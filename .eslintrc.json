{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "linebreak-style": "off",
        "indent": [ "warn", 4 ],
        "comma-dangle": [ "error", "never"],
        "no-console": "off"
    }
}